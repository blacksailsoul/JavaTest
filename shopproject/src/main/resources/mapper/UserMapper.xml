<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whlg.store.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.whlg.store.entity.User">
        <result column="created_user" property="createdUser"></result>
        <result column="created_time" property="createdTime"></result>
        <result column="change_user" property="changeUser"></result>
        <result column="change_time" property="changeTime"></result>
    </resultMap>
    <insert id="insertUser">
        insert into user(username, password, phone, email, avatar, birthday, sex, address, created_user, created_time, change_user, change_time)
        values (#{username}, #{password}, #{phone}, #{email}, #{avatar}, #{birthday}, #{sex}, #{address}, #{createdUser}, #{createdTime}, #{changeUser}, #{changeTime})
    </insert>
    <update id="UpdatePassword">
        update user
        set password=#{password},change_user=#{changeUser},change_time=#{changeTime}
        where uid=#{uid}
    </update>
    <update id="updateInfo">
        update user
        set username=#{username},birthday=#{birthday},sex=#{sex}
        where uid=#{uid}
    </update>
    <update id="updateAddress">
        update user
        set address=#{address},change_user=#{changeUser},change_time=#{changeTime}
        where uid=#{uid}
    </update>
    <update id="updatePasswordInt">
        update user
        set password=#{newPassword},change_user=#{changeUser},change_time=#{changeTime}
        where uid=#{uid}
    </update>
    <update id="updateAvatar">
        update user
        set avatar=#{avatar},change_user=#{changeUser},change_time=#{changeTime}
        where uid=#{uid}
    </update>
    <select id="findByUsername" resultMap="UserResultMap">
            select * from user where username=#{username}
    </select>
    <select id="findByEmail" resultMap="UserResultMap">
        select * from user where email=#{email}
    </select>
    <select id="findByUid" resultMap="UserResultMap">
        select * from user where uid=#{uid}
    </select>
</mapper>